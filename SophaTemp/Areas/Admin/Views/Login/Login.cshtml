@model SophaTemp.Viewmodel.LoginVm

@{
    Layout = null;
    ViewData["Title"] = "Login";
}


    <div class="login-container">
        <div class="login-header">

            <h1>Veuillez Se Connecter !</h1>
        </div>
        <div class="login-form">
            <form asp-action="Login" method="post">
                
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" required class="form-control"/>
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MotDePasse"></label>
                        <input asp-for="MotDePasse" required class="form-control" />
                        <span asp-validation-for="MotDePasse"></span>
                    </div>
               
                <div class="form-group form-check">
                    <input type="checkbox" asp-for="RememberMe" id="rememberMe">
                    <label for="rememberMe">Se souvenir de moi</label>
                </div>
                <button type="submit" class="btn-login">Se connecter</button>
            </form>
            <a href="#" class="forgot-password">Mot de passe oublié ?</a>
        </div>
        <footer>
            <p>Support: support@sobrus.com | Phone: 05 30 500 500</p>
        </footer>
    </div>
