@model SophaTemp.Models.Commande

@{
    ViewData["Title"] = "Edit";
}
<div class="container mt-5">

<h1>Edit</h1>

<h4>Commande</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="border p-4 rounded">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CommandeId" />
            
            <div class="form-group">
                <label asp-for="DateCommande" class="control-label"></label>
                <input asp-for="DateCommande" class="form-control" />
                <span asp-validation-for="DateCommande" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdLotCommande" class="control-label"></label>
                <input asp-for="IdLotCommande" class="form-control" />
                <span asp-validation-for="IdLotCommande" class="text-danger"></span>
            </div>
            <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-outline-primary" />

                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
