@model IEnumerable<SophaTemp.Models.Passeport>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                Permissions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
                <td>
                    @foreach (var permission in item.Permissions)
                    {
                        <div>@permission.Nom</div> 
                    }
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PasseportId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PasseportId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PasseportId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
