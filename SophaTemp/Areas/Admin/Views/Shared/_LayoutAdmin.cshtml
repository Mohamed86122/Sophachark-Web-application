<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]  Sophachark</title>
    <link rel="icon" type="image/png" href="~/assets/image/SophaLogo.png">
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

    <link rel="stylesheet" href="~/assets/css/style.css" asp-append-version="true" />
    

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
    <style>
        .header-right {
            position: relative;
        }

        .search-input {
            position: absolute;
            top: 60px; /* Adjust based on your actual header height */
            right: 252;
            display: none;
            background: white;
            border: 1px solid #ccc;
            padding: 5px 10px;
            border-radius: 5px;
            width: 200px; /* Adjust based on your preference */
        }

        .user-menu, .message-box {
            position: absolute;
            top: 60px;
            right: 0;
            display: none;
            background: white;
            border: 1px solid #ccc;
            padding: 5px 0;
            border-radius: 5px;
            width: 200px;
        }

            .user-menu ul, .message-box {
                list-style-type: none;
                margin: 0;
                padding: 0;
            }

                .user-menu ul li, .message-box p {
                    padding: 8px 12px;
                    color: #333; /* Darker text for better readability */
                }

                    .user-menu ul li:hover, .message-box p:hover {
                        background-color: #f0f0f0;
                    }

    </style>

    @RenderSection("Style",false)

</head>


    <body>

        <div class="grid-container">

            <!-- Header -->
            <header class="header">
                <div class="menu-icon" onclick="openSidebar()">
                    <span class="material-icons-outlined">menu</span>
                </div>
                <div class="header-left">
                    <span class="material-icons-outlined">search</span>
                    <!-- Input de recherche ajouté ici -->
                    <div class="search-input" style="display: none;">
                        <input type="text" placeholder="Search...">
                    </div>
                </div>
            <div class="header-right">
                <span class="material-icons-outlined">notifications</span>
                <span class="material-icons-outlined">email</span>
                <div class="message-box" style="display: none;">
                    <p>Message 1 pour l'admin</p>
                    <p>Message 2 pour l'admin</p>
                </div>
                <!-- User and message menu ajoutés ici -->
                <span class="material-icons-outlined">account_circle</span>
                <div class="user-menu" style="display: none;">
                    <ul>
                        <li><a href="/profile">Voir le profil</a></li>
                        <li><a href="/logout">Déconnexion</a></li>
                    </ul>
                </div>
               
            </div>
            </header>
            <!-- End Header -->
            <!-- Sidebar -->
            <aside id="sidebar">
                <div class="sidebar-title">
                    <div class="sidebar-brand">
                    <img src="~/assets/image/Sopha.png" class="img-fluid logo" alt="img">
                    </div>
                    <span class="material-icons-outlined" onclick="closeSidebar()">close</span>
                </div>

                <ul class="sidebar-list">
                    <li class="sidebar-list-item">
                    <a href="@Url.Action("Index", "Lots")" >
                            <span class="material-icons-outlined">dashboard</span> LOT
                        </a>
                    </li>
                    <li class="sidebar-list-item">
                    <a href="@Url.Action("Index", "Medicaments")" >
                            <span class="material-icons-outlined">inventory_2</span> Medicament
                        </a>
                    </li>
                    <li class="sidebar-list-item">
                    <a href="@Url.Action("Index", "CategoryMedicaments")" >
                            <span class="material-icons-outlined">inventory_2</span> Categorie
                        </a>
                    </li>
                    <li class="sidebar-list-item">
                    <a href="@Url.Action("Index", "Clients")" >
                            <span class="material-icons-outlined">groups</span> Clients
                        </a>
                    </li>
                    <li class="sidebar-list-item">
                    <a href="@Url.Action("Index", "Passeports")" >
                            <span class="material-icons-outlined">fact_check</span> Passeports
                        </a>
                    </li>
                    <li class="sidebar-list-item">
                    <a href="@Url.Action("Index", "Commandes")" >
                            <span class="material-icons-outlined">poll</span> Commandes
                        </a>
                    </li>
                    <li class="sidebar-list-item">
                    <a href ="@Url.Action("Index", "Factures")" >
                            <span class="material-icons-outlined">receipt</span> Facture
                        </a>
                    </li>
                    <li class="sidebar-list-item">
                    <a href="@Url.Action("AdminMessages", "Contact")">
                            <span class="material-icons-outlined">poll</span> Message Contact
                     </a>
                    </li>
                    <li class="sidebar-list-item">
                    <a href="@Url.Action("Index", "Personnes")" >
                            <span class="material-icons-outlined">person</span> Person
                        </a>
                    </li>
                    <li class="sidebar-list-item">
                        <a href="#" >
                            <span class="material-icons-outlined">settings</span> Settings
                        </a>
                    </li>
                </ul>
            </aside>
            <!-- End Sidebar -->

            <!-- Main Content Area where the Home Index will be rendered -->
        <div class="main" style="grid-area: main;">
            @RenderBody()
        </div>

        </div>
    
    
      

        @RenderSection("footer", required: false)


        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/apexcharts/3.35.5/apexcharts.min.js"></script>
    <!-- Custom JS -->
<script src="~/js/scriptsHome.js" asp-append-version="true"></script>
        
        @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener('click', function (event) {
            if (!event.target.matches('.material-icons-outlined')) {
                var menus = document.querySelectorAll('.search-input, .user-menu, .message-box');
                menus.forEach(function (menu) {
                    menu.style.display = 'none';
                });
            }
        }, true);

        document.querySelector('.header-left .material-icons-outlined').addEventListener('click', function (event) {
            event.stopPropagation();
            var searchInput = document.querySelector('.search-input');
            searchInput.style.display = searchInput.style.display === 'none' ? 'block' : 'none';
        });

        document.querySelector('.header-right .material-icons-outlined:nth-child(3)').addEventListener('click', function (event) {
            event.stopPropagation();
            var userMenu = document.querySelector('.user-menu');
            userMenu.style.display = userMenu.style.display === 'none' ? 'block' : 'none';
        });

        document.querySelector('.header-right .material-icons-outlined:nth-child(2)').addEventListener('click', function (event) {
            event.stopPropagation();
            var messageBox = document.querySelector('.message-box');
            messageBox.style.display = messageBox.style.display === 'none' ? 'block' : 'none';
        });

    </script>

   </body>

</html>
