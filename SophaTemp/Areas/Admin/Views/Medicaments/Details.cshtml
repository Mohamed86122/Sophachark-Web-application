@model SophaTemp.Models.Medicament

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <h1 class="text-center">Details Medicament</h1> 
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">Reference</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Reference)</dd>

                <dt class="col-sm-4">Nom</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nom)</dd>

                <dt class="col-sm-4">Description</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-4">Image</dt>
                <dd class="col-sm-8"><img src="~/@Html.DisplayFor(model => model.Image)" alt=""/></dd>

                <dt class="col-sm-4">Quantite En Alerte</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.QuantiteEnAlerte)</dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model.MedicamentId" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
