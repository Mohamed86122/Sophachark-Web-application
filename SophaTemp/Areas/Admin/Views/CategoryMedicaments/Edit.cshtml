@model SophaTemp.Viewmodel.CategoryMedicamentVM

@{
    ViewData["Title"] = "Edit";
}
<div class="container mt-5">
    <h1>Edit</h1>
    <h4>CategoryMedicament</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="border p-4 rounded">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" name="id" value="@ViewBag.CategoryMedicamentId" />
                    <div class="form-group">
                        <label asp-for="Reference" class="control-label"></label>
                        <input asp-for="Reference" class="form-control" />
                        <span asp-validation-for="Reference" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Libelle" class="control-label"></label>
                        <input asp-for="Libelle" class="form-control" />
                        <span asp-validation-for="Libelle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-outline-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
