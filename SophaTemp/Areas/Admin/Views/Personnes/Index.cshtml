@model IEnumerable<SophaTemp.Models.Personne>

@{
    ViewData["Title"] = "Index";
}
<div class="container mt-5">
    <h1>Index</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.prenom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.motdepasse)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Passeport)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.motdepasse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Passeport.PasseportId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PersonneId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PersonneId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PersonneId">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>