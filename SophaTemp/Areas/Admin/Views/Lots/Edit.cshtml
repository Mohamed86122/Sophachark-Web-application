@model SophaTemp.Models.Lot

@{
    ViewData["Title"] = "Edit";
}
<div class="container mt-5">
    <h1>Edit Lot</h1>

    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="border p-4 rounded">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="LotId" />
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Quantite" class="control-label"></label>
                                <input asp-for="Quantite" class="form-control" />
                                <span asp-validation-for="Quantite" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PrixAchat" class="control-label"></label>
                                <input asp-for="PrixAchat" class="form-control" />
                                <span asp-validation-for="PrixAchat" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PrixVente" class="control-label"></label>
                                <input asp-for="PrixVente" class="form-control" />
                                <span asp-validation-for="PrixVente" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="DateDeProduction" class="control-label"></label>
                                <input asp-for="DateDeProduction" class="form-control" />
                                <span asp-validation-for="DateDeProduction" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="DateDExpedition" class="control-label"></label>
                                <input asp-for="DateDExpedition" class="form-control" />
                                <span asp-validation-for="DateDExpedition" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="MedicamentId" class="control-label"></label>
                                <select asp-for="MedicamentId" class="form-control" asp-items="ViewBag.MedicamentId"></select>
                                <span asp-validation-for="MedicamentId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FournisseurId" class="control-label"></label>
                                <select asp-for="FournisseurId" class="form-control" asp-items="ViewBag.FournisseurId"></select>
                                <span asp-validation-for="FournisseurId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-outline-success">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
