@model SophaTemp.Viewmodel.LoginVm


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="border p-4 rounded">
                <form method="post" asp-action="Login">
        <!-- Email input -->
        <div data-mdb-input-init class="form-outline mb-4">
                        <label class="form-label" for="form2Example1">Email</label>

            <input asp-for="Email" id="form2Example1" class="form-control" placeholder="Entrer votre mail" />
        </div>

        <!-- Password input -->
        <div data-mdb-input-init class="form-outline mb-4">
                        <label class="form-label" for="form2Example2">Password</label>

            <input asp-for="MotDePasse" id="form2Example2" class="form-control" placeholder="Entrer Votre mot de passe"/>
        </div>

        

        <!-- Submit button -->
        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4">Sign in</button>


    </form>
            </div>
       </div>
    </div>
</div>