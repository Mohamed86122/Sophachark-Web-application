@model SophaTemp.Models.Facture

@{
    ViewData["Title"] = "Create";
}
<div class="container mt-5">

<h1>Create Facture </h1>

<hr />
<div class="row">
    <div class="row justify-content-center">
        <div class="col-md-6">
        <form asp-action="Create" methode ="post">
