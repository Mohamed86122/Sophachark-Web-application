<!--------shop_-------->

<section class="shop_">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="heading">
                    <h1>La liste des médicaments</h1>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-lg-3">
                <div class="shop_left_bar">

                    <div id="search" class=" widget_search">
                        <div class=" widget_product_search">
                            <form role="search" method="get" class="product-search" action="#">
                                <input class="search-field" placeholder="Enter Keyword..." type="search">
                                <input value="" type="submit" class="search_btn">
                            </form>
                        </div>
                    </div>
                    <div class="categories">
                        <h2 class="sub_head">Categories</h2>
                        <ul>
                            <li><a href="#">All Categories<span>(20)</span></a></li>
                            <li><a href="#"> Business<span>(5)</span></a></li>
                            <li><a href="#">Lifestyle<span> (6)</span></a></li>
                            <li><a href="#">Experience<span>(3)</span></a></li>
                            <li><a href="#">Technology<span>(9)</span></a></li>
                            <li><a href="#">Other<span> (8)</span></a></li>
                        </ul>
                    </div>

                    <div class="widget  widget_price_filter">
                        <h2 class="sub_head">Filter by price</h2>
                        <form>
                            <div class="price_slider_wrapper">
                                <div id="slider-range" class="price_slider"></div>
                                <div class="price_slider_amount">

                                    <div class="price_label">
                                        Price:
                                        <input type="text" id="amount">
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="clearfix"></div>
                    </div>
                    <div class="widget_view_products">
                        <h2 class="sub_head">Viewed Products</h2>
                        
                        <div class="view_products">
                            @foreach (var medicament in ViewBag.Medicaments)
                            {
                                <div class="product_inner">
                                        <img src="~/@Url.Content(medicament.Image)" alt="Image du médicament" class="img-fluid" style="max-width:100px; height:auto;">
                                        <div class="view_text">
                                        <h2>@medicament.Nom</h2>
                                        <p>$40.00</p>
                                    </div>
                                </div>
                            } 
                        </div>
                       
                    </div>



                </div>
            </div>

            <div class="col-lg-9">
                <div class="shop_right_bar">
                    <div class="top_shop_bar">
                        <div class="row ">

                            <div class="col-lg-6">
                                <div class="products_showing">
                                    <p>Showing 1–9 of 17 results</p>
                                </div>
                            </div>
                            <div class="col-lg-6 ">
                                <form>
                                    <div class="form-group">

                                        <select name="departmrnt" id="department">
                                            <option>Slower</option>
                                            <option>Slow</option>
                                            <option selected="selected">Medium</option>
                                            <option>Fast</option>
                                            <option>Faster</option>
                                        </select>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        @foreach (var medicament in ViewBag.Medicaments)
                         {
                            <div class="col-md-4 col-sm-6 col-xs-12">
                                <div class="shop_products_outer">
                                    <div class="image">
                                        <img src="~/@Url.Content(medicament.Image)" alt="Image du médicament" class="img-fluid" style="max-width:100px; height:auto;">
                                        <div class="overlay_cart">
                                            <span id="add-to-cart-icon" class="flaticon-supermarket"></span>
                                        </div>
                                    </div>
                                    <div class="porduct_des">
                                        <h2><a href="#">@medicament.Nom</a></h2>
                                        <p>$25.00</p>
                                    </div>
                                </div>
                            </div>
                          }
                       

                    </div>
                    <div class="row">
                        <div class="col-lg-12 text-center pagination_column_shop">
                            <ul class="pagination">
                                <li class="disabled"><a href="#"><span class="fa fa-angle-left"></span></a></li>
                                <li class="active"><a href="#">01 </a></li>
                                <li><a href="#">02</a></li>
                                <li><a href="#">03</a></li>
                                <li><a href="#">04</a></li>
                                <li><a href="#">05</a></li>
                                <li><a href="#"><span class="fa fa-angle-right"></span></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

