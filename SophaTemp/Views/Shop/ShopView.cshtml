    <script>
        $(document).ready(function () {
            $('#add-to-cart-icon').click(function () {
                // Récupérer la span dans le layout
                var cartIcon = $('.cart-icon');
                // Récupérer le nombre actuel d'articles dans le panier
                var currentCount = parseInt(cartIcon.text());
                // Ajouter 1 au nombre actuel
                var newCount = currentCount + 1;
                // Mettre à jour le contenu de la span dans le layout avec le nouveau nombre
                cartIcon.text(newCount);
            });
        });
    </script>
