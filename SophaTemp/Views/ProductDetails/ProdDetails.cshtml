@model dynamic

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var relatedProducts = Model.RelatedProducts;
    var prixVente = Model.PrixVente;
}



<section class="product_details_outer">
    <div class="container">
        <div class="row one">
            <div class="col-lg-6">
                <div class="slider">
                    <div id="slider" class="flexslider">
                        <ul class="slides">
                            <li>
                                <img src="~/@Url.Content(Model.Medicament.Image)" class="img-fluid" alt="Image du médicament" />
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="product_detail_right">
                    <ul class="rating">
                        <li><span class="flaticon-star"></span><span class="flaticon-star"></span><span class="flaticon-star"></span><span class="flaticon-star"></span><span class="flaticon-star"></span></li>
                        <li>(1 Reviews)</li>
                    </ul>
                    <h2 class="product_nam">@Model.Medicament.Nom</h2>
                    <h6 class="product_price">$@prixVente</h6>
                    <h5><span class="flaticon-correct"></span>In Stock</h5>
                    <p class="product_description">@Model.Medicament.Description</p>
                    <div class="add_to_carts">
                        <div class="field">
                            <button type="button" class="sub">-</button>
                            <input type="number" id="1" value="1" min="1" max="@Model.Medicament.QuantiteEnStock">
                            <button type="button" class="add">+</button>
                        </div>
                        <div class="addbtnct">
                            <button class="theme-btn">ADD TO CART</button>
                        </div>
                    </div>
                    <div class="from_">
                        <p><span>SKU:</span> N/A</p>
                        <p><span>Categories:</span> @Model.Medicament.Category.Libelle</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="product_details_nav_tabs">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="description_tab" data-toggle="tab" href="#description" role="tab" aria-controls="description" aria-selected="true">Description</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="Reviews_tab" data-toggle="tab" href="#Reviews" role="tab" aria-controls="Reviews" aria-selected="false"> Reviews<sup>(1)</sup></a>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description_tab">
                            <p>@Model.Medicament.Description</p>
                        </div>
                        <div class="tab-pane fade" id="Reviews" role="tabpanel" aria-labelledby="Reviews_tab">
                            <!-- Ajouter les avis ici -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row products_caro">
            <div class="col-lg-12">
                <div class="heading">
                    <h1>Related <span>Products</span></h1>
                    <p><a href="#">VIEW ALL</a> </p>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="owl-carousel four-items">
                    @foreach (var product in relatedProducts)
                    {
                        <div class="shop_products_outer">
                            <div class="image">
                                <img src="~/@Url.Content(product.Image)" class="img-fluid" alt="img">
                                <div class="overlay_cart">
                                    <span class="flaticon-supermarket"></span>
                                </div>
                            </div>
                            <div class="porduct_des">
                                <h2><a href="@Url.Action("ProdDetails", "ProductDetails", new { id = product.MedicamentId })">@product.Nom</a></h2>
                                <p>$@prixVente</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <!-- Ajoutez vos scripts ici -->
}
